<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/product"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:queryHint="Search for products"
        android:iconifiedByDefault="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ima2"
        android:layout_marginTop="25dp"
        />
    <ImageButton
        android:id="@+id/ima1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/alertt"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@id/product"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="50dp"

        />
    <ImageButton
        android:id="@+id/ima2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cartp"
        android:background="@color/white"
        app:layout_constraintEnd_toStartOf="@id/ima1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/te1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special for you"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/product"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/te2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See more"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@id/te1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ima1"
        android:layout_marginTop="23dp"
        android:layout_marginStart="40dp"
        />
    <ImageView
        android:id="@+id/image3"
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:background="@drawable/shape"
        android:src="@drawable/lap"
        android:scaleType= "centerCrop"
        app:layout_constraintTop_toBottomOf="@id/te1"
        android:layout_marginTop="25dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:id="@+id/image4"
        android:layout_width="190dp"
        android:layout_height="140dp"
        android:background="@drawable/shape"
        android:src="@drawable/phone"
        android:scaleType= "centerCrop"
        app:layout_constraintTop_toBottomOf="@id/te2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="38dp"
        />
    <TextView
        android:id="@+id/te3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Featured Products"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/image3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/te4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See more"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@id/te3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image4"
        android:layout_marginTop="23dp"
        android:layout_marginStart="40dp"
        />
    <ImageView
        android:id="@+id/image5"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:scaleType= "centerCrop"
        android:background="@drawable/shape"
        android:src="@drawable/lap"
        app:layout_constraintTop_toBottomOf="@id/te3"
        android:layout_marginTop="25dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        />








</androidx.constraintlayout.widget.ConstraintLayout>